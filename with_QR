    class_names = file.readlines()

# Initialize the QR code scanning mode
qr_scanned = False
user_id = None

# Main loop for ESP32 stream
url = 'http://192.168.88.11/cam-hi.jpg'  # Adjust to your ESP32-CAM streaming URL
while True:
    try:
        # Wait for QR code scan (set qr_scanned to True once QR is scanned)
        if not qr_scanned:
            print("Please scan the QR code to begin.")
            # Implement QR code scan logic here (from camera or other input)
            # Once QR is scanned, set qr_scanned = True and extract the user_id from the QR
            continue
        
        img_resp = urllib.request.urlopen(url)
        imgnp = np.array(bytearray(img_resp.read()), dtype=np.uint8)
        img = cv2.imdecode(imgnp, -1)

        # Resize image to reduce load
        img = cv2.resize(img, (640, 480))

        # Rotate image if necessary
        img = cv2.transpose(img)
        img = cv2.flip(img, flipCode=0)

        # Load user-specific data after QR scan
        if user_id:
            images, classNames = load_images_from_firestore(user_id)
            encodeListKnown = findEncodings(images)
            print("Face encoding completed.")

        # Process frame
        process_frame(img, user_id)

        # Exit on 'q' key press
        if cv2.waitKey(1) & 0xFF == ord('q'):
            break
    except Exception as e:
        print(f"Error processing webcam stream: {e}")
        break

cv2.destroyAllWindows()
